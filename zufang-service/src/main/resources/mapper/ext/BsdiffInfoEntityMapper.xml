<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.apass.zufang.mapper.zfang.BsdiffInfoEntityMapper" >
  <sql id="queryVoSql">
    <where>
      <if test="lineId != null">
        and line_id=#{lineId}
      </if>

      <if test="bsdiffVer != null">
        and bsdiff_ver=#{bsdiffVer}
      </if>
    </where>
  </sql>

  <!--查询所有:按创建时间倒序排序-->
  <select id="selectAllBsdiff" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List" />
    from t_zfang_bsdiff_info ORDER BY created_time DESC
  </select>

 <select id="selectAllBsdiffNewest" resultMap="BaseResultMap">
   SELECT <include refid="Base_Column_List" />
   from t_zfang_bsdiff_info
   where id in
   (
     SELECT
     MAX(id) id
     FROM
     t_zfang_bsdiff_info
     GROUP BY
     line_id
   )
   ORDER BY created_time DESC
  </select>

  <!--查询所有:按创建时间倒序排序-->
  <select id="selectBsdiffInfoByVo" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List" />
    from t_zfang_bsdiff_info
    <include refid="queryVoSql"/>
    ORDER BY created_time DESC
  </select>

  <!--查询某个 id下最大版本号对应数据-->
  <select id="selectMaxBsdiffInfoById" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List" />
    from t_zfang_bsdiff_info where id = (
      SELECT
      MAX(id) id
      FROM
      t_zfang_bsdiff_info
      where line_id = #{value}
    )
  </select>


</mapper>