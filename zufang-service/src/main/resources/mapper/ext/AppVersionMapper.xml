<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.apass.zufang.domain.common.AppVersionEntity">
	<sql id="QueryAppVersionConditionSql">
       <where>
	        <if test="Id!=null and Id!=''"> 
	            AND id = #{Id}
	        </if>
            <if test="versionName!=null and versionName!=''">
            	AND version_name = #{versionName}
            </if>
	        <if test="versionCode!=null and versionCode!=''">
	            AND version_code = #{versionCode}
	        </if>
	        <if test="iosVersionname!=null and iosVersionname!=''"> 
	            AND ios_version_name = #{iosVersionname} 
	        </if>
	        <if test="iosVersioncode!=null and iosVersioncode!=''">
	            AND ios_version_code = #{iosVersioncode} 
	        </if>
        </where>
    </sql>
	<select id="getVersionPage" resultMap="BaseResultMap"
		parameterType="java.lang.String">
        select
        <include refid="Base_Column_List" />
        from t_zufang_app_version
        <include refid="QueryConditionSqlBackup" />
        <if test="startRecordIndex != null">
            <include refid="PAGINATION.MYSQL_PAGINATION" />
        </if>
	</select>
</mapper>
